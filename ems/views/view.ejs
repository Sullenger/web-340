<!DOCTYPE html>
<html lang="en">
  <head>
    <% include header %>
  </head>
  <body>
    <% include navbar %>

    <!-- Skipping for now -->
    <div role="main" class="container width50">
      <br />
      <br />

      <h2>Employee Record</h2>
      <div>
        <br />
        <div class="form-group">
          <label for="txtName">First Name:</label>
          <input
            type="text"
            class="form-control bg-dark text-light pl-4"
            id="txtName"
            readonly
            name="txtName"
            value="<%= employee[0].firstName %>"
          />
        </div>
        <br />
        <div class="form-group">
          <label for="txtName">Last Name:</label>
          <input
            type="text"
            class="form-control bg-dark text-light pl-4"
            id="txtName"
            readonly
            name="txtName"
            value="<%= employee[0].lastName %>"
          />
        </div>
      </div>
      <br />
      <a href="/list">Return to Employees</a>
    </div>

    <% include scripts %>
  </body>
</html>
